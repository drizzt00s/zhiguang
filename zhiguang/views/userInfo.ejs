<script>
$(document).ready(function(){

    $("#completeUserInfo").on("click", function(){ 
        var idCard1 =  $("#idCard1")[0].files[0];
        var idCard2 =  $("#idCard2")[0].files[0];
        var photo =  $("#photo")[0].files[0];
        if(!idCard1){
            alert("请选择身份证正面照");
