        }else if(!idCard2){
            alert("请选择身份证反面照");
            return false;
        }else if(!photo){
            alert("请选择个人照片");
            return false;
        }else{
            alert("提交成功");
            document.getElementById("userComplete").submit();
        }
    });



    function checkInfoStatus(){
        var infoStatus =$.trim($("#idChecked").text());
        if(infoStatus === "已实名认证"){
            $("#submitForm").hide();
        }
  
    }
    checkInfoStatus();
    


})
